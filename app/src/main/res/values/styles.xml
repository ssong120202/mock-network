<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@android:color/black</item>
    </style>

    <!-- LIGHT THEME -->
    <style name="LightTheme" parent="AppTheme">
        <item name="android:textColorPrimary">@color/textLabels</item>
        <item name="android:textColorHint">@color/textLabels</item>
        <item name="android:editTextColor">@color/textLabels</item>
        <!--  this effects the TextInputEditText  -->
        <item name="colorControlActivated">@color/appHighlight</item>
    </style>

    <style name="EditTextColors">
        <item name="android:textColorHint">@color/textLabels</item>
        <item name="android:textColor">@color/textLabels</item>
    </style>

    <style name="TextInputStyle.Hint" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/textLabels</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/open_sans_normal</item>
    </style>

    <style name="TextInputStyle.HintWhite" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/open_sans_normal</item>
    </style>

    <style name="TextInputStyle.Error" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/open_sans_normal</item>
    </style>

</resources>
